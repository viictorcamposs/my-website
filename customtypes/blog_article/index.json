{
  "id": "blog_article",
  "label": "blog_article",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": { "label": "UID", "placeholder": "URL uid for the article" },
        "type": "UID"
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "Title of the article",
          "allowTargetBlank": false,
          "single": "heading1"
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "Short summary of the article",
          "allowTargetBlank": false,
          "single": "paragraph"
        }
      },
      "releaseDate": {
        "type": "Timestamp",
        "config": { "label": "Release Date", "placeholder": "Date of publication" }
      },
      "image": {
        "type": "Image",
        "config": { "label": "Image", "constraint": {}, "thumbnails": [] }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "article_screenshot_component": { "type": "SharedSlice" },
            "article_embed_video_component": { "type": "SharedSlice" }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": { "label": "Meta Description", "placeholder": "A brief summary of the page" },
        "type": "StructuredText"
      },
      "meta_image": {
        "config": {
          "constraint": { "height": 1260, "width": 2400 },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
