{
  "id": "blog_article",
  "label": "blog_article",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": { "config": { "label": "UID" }, "type": "UID" },
      "release_date": { "type": "Date", "config": { "label": "release_date", "placeholder": "" } },
      "release_date_timestamp": {
        "type": "Timestamp",
        "config": { "label": "release_date", "placeholder": "" }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "title",
          "placeholder": "",
          "allowTargetBlank": false,
          "single": "heading1"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "hero": { "type": "SharedSlice" },
            "article_screenshot_component": { "type": "SharedSlice" }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": { "label": "Meta Description", "placeholder": "A brief summary of the page" },
        "type": "StructuredText"
      },
      "meta_image": {
        "config": {
          "constraint": { "height": 1260, "width": 2400 },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
